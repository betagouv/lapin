- content_for :title do
  | #{@user.full_name}

- content_for :breadcrumb do
  ol.breadcrumb.mr-2.d-inline-flex
    li.breadcrumb-item
      = link_to 'Vos usagers', organisation_users_path(current_organisation)
    li.breadcrumb-item
      = link_to @user.responsible.full_name, organisation_user_path(current_organisation, @user.responsible)
    li.breadcrumb-item.active #{@user.full_name}

  = link_to "Trouver un crÃ©neau", organisation_agent_searches_path(current_organisation, user_id: @user.id), class: "btn btn-outline-white"

.row
  .col-md-6
    .card
      .card-body
        h4.card-title.mb-3 Informations de votre proche
        ul.list-unstyled
          - {first_name: @user.first_name, last_name: @user.last_name, birth_date: birth_date_and_age(@user) }.each do |k,v|
              li.mb-2
                strong= "#{t("activerecord.attributes.user.#{k}")} : "
                | #{v}
        - if @user.notes.present?
          .card-text
            i.far.fa-fw.fa-sticky-note>
            strong> Notes libres :
            = simple_format(@user.notes)
        .row.mt-5
          .col.text-left
            = link_to "Supprimer", organisation_relative_path(current_organisation, @user), method: :delete, class: "btn btn-outline-danger", data: { confirm: "Confirmez-vous la suppression de cet usager ?"}
          .col.text-right
            = link_to "Modifier", edit_organisation_relative_path(current_organisation, @user), class: "btn btn-primary"

    .card
      .card-body
        h4.card-title.mb-3 Informations sur l'usager en charge
        = render 'agents/users/responsible_information', user: @user.responsible

  .col-md-6
    .card
      .card-body
        = render 'stats/rdv_counters', rdvs: @user.rdvs.where(organisation_id: current_organisation)
        .text-right
          = link_to 'Voir tous les RDV', organisation_user_rdvs_path(current_organisation, @user), class: 'btn btn-outline-primary'
