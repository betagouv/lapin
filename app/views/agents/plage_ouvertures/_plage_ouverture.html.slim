      = link_to( \
        "Dupliquer", \
        new_organisation_agent_plage_ouverture_path( \
          current_organisation, \
          @agent.id, \
          title: plage_ouverture.title, \
          lieu_id: plage_ouverture.lieu_id, \
          motif_ids: plage_ouverture.motif_ids \
        ), \
        data: { rightbar: true } \
      )
