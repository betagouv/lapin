.card
  .card-header
    .d-flex.justify-content-between
      .mt-1
        | Derniers rendez-vous
      = link_to "Voir tous les rendez-vous précédents", admin_organisation_user_rdvs_path(current_organisation, user), class: "btn btn-outline-primary small"
  .card-body
    - if user.previous_rdvs(current_organisation).empty?
      .text-muted aucun rendez-vous précédent
    - user.previous_rdvs(current_organisation).each do |previous_rdv|
      .mb-2
        strong= "Le #{l(previous_rdv.starts_at, format: :human)}"
        = rdv_status_tag(previous_rdv)
        div
          = previous_rdv.motif.name
          div
            - if previous_rdv.context.blank?
              .text-muted  Pas de contexte renseigné
            - else
              .text-muted Contexte :
              .border-left.pl-2= simple_format(previous_rdv.context)
        hr


