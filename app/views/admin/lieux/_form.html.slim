= simple_form_for [:admin, lieu.organisation, lieu], remote: request.xhr?, data: { rightbar: true } do |f|
  = render partial: 'layouts/model_errors', locals: { model: lieu }
  = f.input :name
  = f.input :address, input_html: { class: "places-js-container" }
  = f.input :latitude, as: :hidden
  = f.input :longitude, as: :hidden

  - if lieu.plage_ouvertures.any?
    .alert.alert-info
      | Impossible de supprimer ce lieu
      = question_tag_tooltip "Une ou plusieurs plages d'ouverture référencent ce lieu. Assignez ces plages d'ouverture à un autre lieu pour pouvoir le supprimer."
  .row
    - if lieu.persisted?
      .col.text-left
        - if lieu.plage_ouvertures.any?
          = button_tag "Supprimer", type: 'button', disabled: true, class: "btn btn-outline-danger"
        - else
          = link_to "Supprimer", admin_organisation_lieu_path(lieu.organisation, lieu), method: :delete, class: "btn btn-outline-danger", data: { confirm: "Confirmez-vous la suppression de ce lieu ?"}
    .col.text-right
      = f.button :submit
